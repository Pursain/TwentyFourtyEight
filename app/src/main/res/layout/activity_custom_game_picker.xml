<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomGamePicker">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_maxValue"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_customStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:onClick="onClick"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_shade"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toBottomOf="@+id/rv_maxValue"
        app:layout_constraintEnd_toEndOf="@+id/rv_maxValue"
        app:layout_constraintStart_toStartOf="@+id/rv_maxValue"
        app:layout_constraintTop_toBottomOf="@+id/tv_maxValueTitle" />

    <TextView
        android:id="@+id/tv_maxValueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Max Value"
        app:layout_constraintBottom_toTopOf="@+id/rv_maxValue"
        app:layout_constraintEnd_toEndOf="@+id/tv_shade"
        app:layout_constraintStart_toStartOf="@+id/rv_maxValue" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dim"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dimTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Dimensions"
        app:layout_constraintBottom_toTopOf="@+id/rv_dim"
        app:layout_constraintEnd_toEndOf="@+id/rv_dim"
        app:layout_constraintStart_toStartOf="@+id/rv_dim" />

    <TextView
        android:id="@+id/tv_shade2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toBottomOf="@+id/rv_dim"
        app:layout_constraintEnd_toEndOf="@+id/rv_dim"
        app:layout_constraintStart_toStartOf="@+id/rv_dim"
        app:layout_constraintTop_toTopOf="@+id/rv_dim" />

</android.support.constraint.ConstraintLayout>